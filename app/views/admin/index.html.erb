<h1>Admin Home</h1>
<div class="flex flex-wrap justify-between items-center mt-8 w-full max-w-4xl">
  <h2 class="text-2xl text-gray-800 font-medium mb-4">Daily States</h2>
  <div class=" flex gap-10 flex-col md:flex-row justify-between w-full">
    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300"> 
      <div class="px-6 py-4"> 
        <div class="font-bold text-xl mb-2 text-white">
          Revenue
        </div>
        <p class="text-white text-base">
          $<%= @quick_states[:revenue] ? (@quick_states[:revenue]/100.0).to_s : "0" %>
        </p>
      </div>
    </div> 

    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300"> 
      <div class="px-6 py-4"> 
        <div class="font-bold text-xl mb-2 text-white">
          Total sales
        </div>
        <p class="text-white text-base">
          <%= @quick_states[:sales] ? (@quick_states[:sales]).to_s : "0" %>
        </p>
      </div>
    </div>

    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300"> 
      <div class="px-6 py-4"> 
        <div class="font-bold text-xl mb-2 text-white">
          Average sales
        </div>
        <p class="text-white text-base">
          $<%= @quick_states[:avg_sale] ? (@quick_states[:avg_sale]/100.0).to_s : "0" %>
        </p>
      </div>
    </div> 

    <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300"> 
      <div class="px-6 py-4"> 
        <div class="font-bold text-xl mb-2 text-white">
        Item per sale
        </div>
        <p class="text-white text-base">
          <%= @quick_states[:per_sale] ? (@quick_states[:per_sale]).to_i : "0" %>
        </p>
      </div>
    </div> 
  
  </div>

  <div data-controller="dashboard">
    <canvas id="revenueChart"></canvas>
  </div>

</div>